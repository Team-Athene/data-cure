{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "logs",
    "dist",
    "uploads"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "paths": {
    "@app": [
      "app"
    ],
    "@app/*": [
      "app/*"
    ],
    "@seed": [
      "seed"
    ],
    "@seed/*": [
      "seed/*"
    ],
    "@config": [
      "config"
    ],
    "@config/*": [
      "config/*"
    ],
    "@shared": [
      "shared"
    ],
    "@shared/*": [
      "shared/*"
    ]
  }
}
